# Используйте официальный образ Python как родительский образ
FROM python:3.8-slim

# Установите рабочий каталог в контейнере
WORKDIR /app

# Копируйте файлы в контейнер
COPY . .

# Установите необходимые пакеты
RUN pip install --no-cache-dir Flask

# Сообщите Docker, что контейнер слушает на определенном порту во время выполнения
EXPOSE 5000

# Запустите app.py при запуске контейнера
CMD ["flask", "run", "--host=0.0.0.0"]
